<UserControl x:Class="Reginald.Views.UtilitiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reginald.Views" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             
             xmlns:cal="http://caliburnmicro.com"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             
             xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF">
    <UserControl.Resources>
        <ResourceDictionary>
            <!-- ControlTemplate for ListBoxItems-->
            <ControlTemplate x:Key="KeywordSearchResultsListBoxItems" TargetType="ListBoxItem">
                <Border x:Name="listBoxItemBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True">
                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                      Content="{TemplateBinding ContentControl.Content}"
                                      ContentTemplate="{TemplateBinding ContentControl.ContentTemplate}"/>
                </Border>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter TargetName="listBoxItemBorder"
                                Property="Background" Value="Transparent"/>
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter TargetName="listBoxItemBorder"
                                Property="Background" Value="#33d16c00"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer x:Name="ScrollViewer"
                  fw:PointerTracker.Enabled="True">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="PreviewMouseWheel">
                <cal:ActionMessage MethodName="ScrollViewer_PreviewMouseWheel">
                    <cal:Parameter Value="{Binding ElementName=ScrollViewer}"/>
                    <cal:Parameter Value="$eventargs"/>
                </cal:ActionMessage>
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <StackPanel Margin="20 7 20 10">
            <TextBlock Text="Utilities"
                       FontSize="32"
                       Foreground="White"/>
            <StackPanel Margin="0 16 16 0">
                <TextBlock Text="Search Results"
                           FontSize="24"
                           Foreground="White"/>
                <TextBlock Text="Include installed applications in your search results and have them indexed"
                           TextWrapping="Wrap"
                           FontSize="16" FontWeight="Light"
                           Foreground="White"
                           Margin="0 16 0 0"/>
                <ToggleButton Style="{StaticResource ToggleButtonStyle}"
                              IsChecked="True"
                              Margin="0 8 0 0"/>
                <TextBlock Text="Include default keyword searches in your search results"
                           TextWrapping="Wrap"
                           FontSize="16" FontWeight="Light"
                           Foreground="White"
                           Margin="0 12 0 0"/>
                <ToggleButton Style="{StaticResource ToggleButtonStyle}"
                              IsChecked="True"
                              Margin="0 8 0 0"/>
            </StackPanel>
            <Label Content="Default keywords"
                   Foreground="White"
                   FontWeight="Light"
                   Margin="30 32 0 0"/>
            <DataGrid x:Name="KeywordSearchResults"
                      SelectedItem="{Binding Path=SelectedKeywordSearchResult, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" SelectionMode="Single"
                      HeadersVisibility="Column"
                      Margin="30 0 0 32"
                      BorderBrush="Gray">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Icon"
                                            IsReadOnly="True"
                                            Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Icon}"
                                       Width="20" Height="20"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Keyword" Binding="{Binding Keyword}"
                                        IsReadOnly="True"
                                        Width="*"
                                        FontSize="16" FontWeight="Light"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}"
                                        IsReadOnly="True"
                                        Width="2*"
                                        FontSize="16" FontWeight="Light"/>
                    <DataGridTemplateColumn Header="Enabled" 
                                            IsReadOnly="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsEnabled}"
                                          HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Checked">
                                            <cal:ActionMessage MethodName="KeywordSearchResults_Checked">
                                                <cal:Parameter Value="{Binding ElementName=KeywordSearchResults}"/>
                                                <cal:Parameter Value="$eventargs"/>
                                                <cal:Parameter Value="Search"/>
                                            </cal:ActionMessage>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="Unchecked">
                                            <cal:ActionMessage MethodName="KeywordSearchResults_Unchecked">
                                                <cal:Parameter Value="{Binding ElementName=KeywordSearchResults}"/>
                                                <cal:Parameter Value="$eventargs"/>
                                                <cal:Parameter Value="Search"/>
                                            </cal:ActionMessage>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </CheckBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Label Content="Your personal keywords"
                   Foreground="White"
                   FontWeight="Light"
                   Margin="30 0 0 0"/>
            <DataGrid x:Name="UserKeywordSearchResults"
                      SelectedItem="{Binding Path=SelectedUserKeywordSearchResult, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" SelectionMode="Single"
                      HeadersVisibility="Column"
                      Margin="30 0 0 0"
                      BorderBrush="Gray">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Icon"
                                            IsReadOnly="True"
                                            Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Icon}"
                                       Width="20" Height="20"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Keyword" Binding="{Binding Keyword}"
                                        IsReadOnly="True"
                                        Width="*"
                                        FontSize="16" FontWeight="Light"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}"
                                        IsReadOnly="True"
                                        Width="2*"
                                        FontSize="16" FontWeight="Light"/>
                    <DataGridTemplateColumn Header="Enabled" 
                                            IsReadOnly="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsEnabled}"
                                          HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Checked">
                                            <cal:ActionMessage MethodName="UserKeywordSearchResults_Checked">
                                                <cal:Parameter Value="{Binding ElementName=UserKeywordSearchResults}"/>
                                                <cal:Parameter Value="$eventargs"/>
                                                <cal:Parameter Value="UserSearch"/>
                                            </cal:ActionMessage>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="Unchecked">
                                            <cal:ActionMessage MethodName="UserKeywordSearchResults_Unchecked">
                                                <cal:Parameter Value="{Binding ElementName=UserKeywordSearchResults}"/>
                                                <cal:Parameter Value="$eventargs"/>
                                                <cal:Parameter Value="UserSearch"/>
                                            </cal:ActionMessage>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </CheckBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 15 0 0">
                <Button Padding="5 2.5"
                        Margin="0 0 5 0"
                        Background="#4A4A4A"
                        Content="Delete keyword"
                        Width="Auto"
                        FontWeight="Light" FontSize="14">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <cal:ActionMessage MethodName="DeleteKeyword_Click">
                                <cal:Parameter Value="$this"/>
                                <cal:Parameter Value="$eventargs"/>
                            </cal:ActionMessage>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Button.Style>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonRevealStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=UserKeywordSearchResults, Path=SelectedItem, UpdateSourceTrigger=PropertyChanged}" Value="{x:Null}">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Padding="5 2.5"
                        Margin="0 0 5 0"
                        Background="#4A4A4A"
                        Content="Edit keyword"
                        Width="Auto"
                        FontWeight="Light" FontSize="14">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <cal:ActionMessage MethodName="EditKeyword_ClickAsync">
                                <cal:Parameter Value="$this"/>
                                <cal:Parameter Value="$eventargs"/>
                            </cal:ActionMessage>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Button.Style>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonRevealStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=UserKeywordSearchResults, Path=SelectedItem, UpdateSourceTrigger=PropertyChanged}" Value="{x:Null}">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Style="{StaticResource ButtonRevealStyle}"
                        Padding="5 2.5"
                        Background="#4A4A4A"
                        Content="Create keyword"
                        Width="Auto"
                        FontWeight="Light" FontSize="14">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <cal:ActionMessage MethodName="CreateKeyword_ClickAsync">
                                <cal:Parameter Value="$this"/>
                                <cal:Parameter Value="$eventargs"/>
                            </cal:ActionMessage>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
