<Window x:Class="Reginald.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reginald.Views"
        mc:Ignorable="d"
        
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        fw:AcrylicWindow.Enabled="True"
        fw:AcrylicWindow.TintColor="Black"
        fw:AcrylicWindow.TintOpacity="0.4"
        fw:AcrylicWindow.NoiseOpacity="0"
        fw:AcrylicWindow.AcrylicWindowStyle="None"
        
        Title="Reginald"
        Height="450" Width="800"
        FontSize="18" FontFamily="Segoe UI"
        BorderThickness="0"
        WindowStartupLocation="CenterScreen">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="20"
                      ResizeBorderThickness="{x:Static SystemParameters.WindowResizeBorderThickness}"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="TitleBarButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="IsTabStop" Value="False"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="DarkGray"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="SettingsButtonStyle" TargetType="Button"
                   BasedOn="{StaticResource ButtonRevealStyle}">
                <Setter Property="Foreground" Value="LightGray"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Height" Value="42"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
            </Style>

            <Style x:Key="SettingsButton__TextBlockStyle" TargetType="TextBlock">
                <Setter Property="Padding" Value="20 0 0 0"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Gesture="Alt + Space"
                    Command="{Binding OpenWindowCommand}"
                    HotkeyManager.RegisterGlobalHotkey="True"/>
    </Window.InputBindings>

    <Grid fw:PointerTracker.Enabled="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="225"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- # Navigation Menu -->
        <!-- ## Column 0 -->
        <StackPanel x:Name="navigationMenu"
                    Grid.Column="0"
                    Margin="0 10 0 0">
            <TextBlock Text="Settings"
                       Foreground="LightGray"
                       FontSize="14"
                       TextAlignment="Center"
                       Margin="0 0 0 10"/>
            <Button Style="{StaticResource SettingsButtonStyle}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <cal:ActionMessage MethodName="OnSettingsButtonClick">
                            <cal:Parameter Value="{Binding ElementName=navigationMenu}"/>
                            <cal:Parameter Value="$eventargs"/>
                        </cal:ActionMessage>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Stroke="DarkOrange"
                                   Width="2"
                                   HorizontalAlignment="Left"/>
                        <TextBlock Style="{StaticResource SettingsButton__TextBlockStyle}"
                                   Text="General"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Style="{StaticResource SettingsButtonStyle}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <cal:ActionMessage MethodName="OnSettingsButtonClick">
                            <cal:Parameter Value="{Binding ElementName=navigationMenu}"/>
                            <cal:Parameter Value="$eventargs"/>
                        </cal:ActionMessage>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource SettingsButton__TextBlockStyle}"
                                   Text="Utilities"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Style="{StaticResource SettingsButtonStyle}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <cal:ActionMessage MethodName="OnSettingsButtonClick">
                            <cal:Parameter Value="{Binding ElementName=navigationMenu}"/>
                            <cal:Parameter Value="$eventargs"/>
                        </cal:ActionMessage>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource SettingsButton__TextBlockStyle}"
                                   Text="Appearance"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>

        <!-- ## Column 1 -->
        <StackPanel Background="Black"
                    Grid.Column="1"
                    Grid.ColumnSpan="1000">
            <!-- ### Title Bar -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Style="{StaticResource TitleBarButtonStyle}"
                        RenderOptions.EdgeMode="Aliased">
                    <Path Width="46" Height="30"
                          Data="M 18,15 H 28"
                          Stroke="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
                          StrokeThickness="1"/>
                </Button>
                <Button Style="{StaticResource TitleBarButtonStyle}">
                    <Path Width="46" Height="30"
                          Data="M 18.5,10.5 H 27.5 V 19.5 H 18.5 Z"
                          Stroke="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
                          StrokeThickness="1"/>
                </Button>
                <Button x:Name="OnCloseButtonClick"
                        Style="{StaticResource TitleBarButtonStyle}">
                    <Path Width="46" Height="30"
                          Data="M 18,11 27,20 M 18,20 27,11"
                          Stroke="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
                          StrokeThickness="1"/>
                </Button>
            </StackPanel>

            <!-- ### General -->
            <StackPanel Margin="20 7 20 10">
                <TextBlock Text="General Settings"
                           FontSize="32"
                           Foreground="White"/>
            </StackPanel>
        </StackPanel>


